{
  "compilerOptions": {
    "target": "ES2017",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "lib": ["esnext"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["server.ts", "bin/**/*.ts", "src/lib/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", ".next"]
}
